
- unless @episodes.empty?
  - @episode = @episodes.shift
  = partial :episode_content, :locals => {:episode => @episode}

#information-box
  %div.whitebox
    %div.latest
      - @episodes.to_a.each do |episode|
        %ol{:class => "episode-#{episode.id}"}
          %li
            %a.episode-link{:href => "/episodes/#{episode.id}"}
            = "Epis√≥dio #{episode.id} - #{episode.title}"
            %p= episode.description

